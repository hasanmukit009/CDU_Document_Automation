@model DMS.Web.ViewModel.UnitDescriptionViewModel
@{
    ViewData["Title"] = "AddNewUnitDescription";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            @*<h1>New Unit</h1>*@
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-controller="UnitDescription" asp-action="UnitDescriptionListUC">Unit Description</a></li>
                <li class="breadcrumb-item active">Add New Unit</li>
            </ol>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Unit Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="UnitCode">Unit Code</label>
                            <input asp-for="UnitCode" type="text" class="form-control" id="txtUnitCode">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="UnitLevel">Unit Level</label>
                            <input asp-for="UnitLevel" type="text" class="form-control" id="txtUnitLevel">
                        </div>
                        <div class="form-group">
                            <label for="OwningCollege">Owning College</label>
                            <input asp-for="OwningCollege" type="text" class="form-control" id="txtOwningCollege">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="UnitTitle">Unit Title</label>
                            <input asp-for="UnitTitle" type="text" class="form-control" id="txtUnitTitle">
                        </div>
                        <div class="form-group">
                            <label for="OwningDiscipline">Owning Discipline</label>
                            <input asp-for="OwningDiscipline" type="text" class="form-control" id="txtOwningDiscipline">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Course Information</h4><br />
                <p>List all courses that this unit appears as either a core or specialist elective unit</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="CoreCourseCode">Core Course</label>
                            <textarea asp-for="CoreCourseCode" type="text" class="form-control" id="txtCoreCourseCode"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="SpecialistElectiveCourseCode">Specialist Elective</label>
                            <textarea asp-for="SpecialistElectiveCourseCode" type="text" class="form-control" id="txtSpecialistElectiveCourseCode"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Current Description</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea asp-for="CurrentUnitDescription" type="text" class="form-control" id="txtCurrentUnitDescription"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Proposed Description</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="SpecialistElectiveCourseCode">Indicate the type of change being requested:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" checked="">
                                <label class="form-check-label">Change to core unit description content (major)</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" checked="">
                                <label class="form-check-label">Grammar or formatting amendment (minor)</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" checked="">
                                <label class="form-check-label">Providing specific enrolment information for students (minor)</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea asp-for="ProposedUnitDescription" type="text" class="form-control" id="txtProposedUnitDescription"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Justification</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea asp-for="JustificatioRequestOutline" type="text" class="form-control" id="txtJustificatioRequestOutline"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Evaluation of Student Impact</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="DomesticStudentNumber">Number of enrolled students for the year/semester of implementation</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="InternationalStudentNumber">International Student Number</label>
                            <input asp-for="InternationalStudentNumber" type="text" class="form-control" id="txtInternationalStudentNumber">
                        </div>
                        <div class="form-group">
                            <label for="DomesticStudentNumber">Domestic Student Number</label>
                            <input asp-for="DomesticStudentNumber" type="text" class="form-control" id="txtDomesticStudentNumber">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="ObligationsDetails">If a course identified above offered to International provide details on how CDU will still meet its obligations to International Student Visa holders</label>
                            <textarea asp-for="ObligationsDetails" type="text" class="form-control" id="txtObligationsDetails"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="RemovalEffectDetails">If the removal effects study plans, update and attach for each course</label>
                            <textarea asp-for="RemovalEffectDetails" type="text" class="form-control" id="txtRemovalEffectDetails"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Impact on Other Colleges</h4>
                <br />
                <p>Note: If the unit proposal includes the removal of an offering, and the unit exists in courses offered by other Colleges, evidence of consultation with the relevant course coordinator/College Dean will need to be provided.</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="Summary_Of_Consultation_With_Impacted_College">Summary of consultation with impacted College</label>
                            <textarea asp-for="Summary_Of_Consultation_With_Impacted_College" type="text" class="form-control" id="txtSummary_Of_Consultation_With_Impacted_College"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Save</button>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Unit Code</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
