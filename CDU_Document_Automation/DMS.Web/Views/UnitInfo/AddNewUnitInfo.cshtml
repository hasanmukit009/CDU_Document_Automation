@model DMS.Web.ViewModel.UnitInformationViewModel
@{
    ViewData["Title"] = "AddNewUnitInfo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Add New Unit Information!</h1>
        </div>
        <form class="user">
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input asp-for="UnitCode" type="text" class="form-control form-control-user" id="txtUnitCode"
                           placeholder="Unit Code">
                </div>
                <div class="col-sm-6">
                    <input asp-for="UnitTitle" type="text" class="form-control form-control-user" id="txtUnitTitle"
                           placeholder="Unit Title">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input asp-for="CreditPoints" type="text" class="form-control form-control-user" id="txtCreditPoints"
                           placeholder="Credit Points">
                </div>
                <div class="col-sm-6">
                    <input asp-for="Prerequisites" type="text" class="form-control form-control-user" id="txtPrerequisites"
                           placeholder="Assumed knowledge/Prerequisites">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input asp-for="Semester" type="text" class="form-control form-control-user" id="txtSemester"
                           placeholder="Semester">
                </div>
                <div class="col-sm-6">
                    <input asp-for="Year" type="text" class="form-control form-control-user" id="txtYear"
                           placeholder="Year">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input asp-for="Mode" type="text" class="form-control form-control-user" id="txtMode"
                           placeholder="Mode">
                </div>
                <div class="col-sm-6">
                    <input asp-for="Location" type="text" class="form-control form-control-user" id="txtLocation"
                           placeholder="Location">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input asp-for="LearningMethod" type="text" class="form-control form-control-user" id="txtLearningmethod"
                           placeholder="Learning method">
                </div>
                <div class="col-sm-6">
                    <input asp-for="UnitCoordinator" type="text" class="form-control form-control-user" id="txtUnitCoordinator"
                           placeholder="Unit Coordinator">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input asp-for="Phone" type="text" class="form-control form-control-user" id="txtPhone"
                           placeholder="Phone">
                </div>
                <div class="col-sm-6">
                    <input asp-for="Email" type="email" class="form-control form-control-user" id="txtEmail"
                           placeholder="Email">
                </div>
            </div>
            <div class="form-group">
                <textarea asp-for="UnitDescription" class="form-control form-control-user" id="txtUnitDescription"
                          placeholder="Unit Description"></textarea>
            </div>
            <div class="form-group">
                <textarea asp-for="LearningOutComes" class="form-control form-control-user" id="txtLearningOutcomes"
                          placeholder="Learning Outcomes"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-user btn-block">Save</button>
            </div>
            <hr>
        </form>
    </div>
</div>