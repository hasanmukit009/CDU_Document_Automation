@model IEnumerable<DMS.Web.Models.UnitInformationModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12">
    <div class="text-center">
        <h4>Unit Information List (CC)</h4>
    </div>
</div>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Remarks</th>
                            <th style="width:400px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remarks)
                                </td>
                                @if (User.Identity.Name == item.CourseCoordinator)
                                {
                                    <td>
                                        <a asp-action="ViewUnitInformationByCC" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                            <span class="text">View</span>
                                        </a>
                                        <a asp-action="AssignToAdmin" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                            <span class="text">Assign To Admin</span>
                                        </a>
                                        <a asp-action="ReturnCCToUC" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                            <span class="text">Return To UC</span>
                                        </a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a asp-action="ViewUnitInformationByCC" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                            <span class="text">View</span>
                                        </a>
                                        <a asp-action="AssignToAdmin" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                            <span class="text">Assign To Admin</span>
                                        </a>
                                        <a asp-action="ReturnCCToUC" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                            <span class="text">Return To UC</span>
                                        </a>
                                    </td>
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
