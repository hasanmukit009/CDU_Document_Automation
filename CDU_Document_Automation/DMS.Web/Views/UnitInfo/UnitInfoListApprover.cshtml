@model IEnumerable<DMS.Web.Models.UnitInformationModel>
@{
    ViewData["Title"] = "UnitInfoListApprover";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="col-lg-12">
        <div class="text-center">
            <h4>Unit List (Approver)</h4>
        </div>
    </div>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive-lg" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Remarks</th>
                            <th style="width:500px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            @if (item.AssignedApprover == User.Identity.Name)
                            {
                                <td>
                                    <a asp-action="ViewUnitInformationByApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                        <span class="text">View</span>
                                    </a>
                                    <a asp-action="RejectWithMinorChangeFromApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                        <span class="text">Reject (minor)</span>
                                    </a>
                                    <a asp-action="RejectWithMajorChangeFromApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                        <span class="text">Reject (major)</span>
                                    </a>
                                    <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                        <span class="text">Approve</span>
                                    </a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a asp-action="ViewUnitInformationByApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                        <span class="text">View</span>
                                    </a>
                                    <a asp-action="ReturnToUCFromApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                        <span class="text">Reject (minor)</span>
                                    </a>
                                    <a asp-action="ReturnToUCFromApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                        <span class="text">Reject (major)</span>
                                    </a>
                                    <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                        <span class="text">Approve</span>
                                    </a>
                                </td>
                            }

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
