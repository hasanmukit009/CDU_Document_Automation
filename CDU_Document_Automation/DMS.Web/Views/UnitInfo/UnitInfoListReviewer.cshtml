@model IEnumerable<DMS.Web.Models.UnitInformationModel>
@{
    ViewData["Title"] = "UnitInfoListReviewer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>@*Unit Information List*@</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Home</a></li>
                <li class="breadcrumb-item active">Unit Information</li>
            </ol>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table id="tblUnitListReviewer" class="table table-bordered table-striped overflow-auto">
                        <thead>
                            <tr>
                                <th>Remarks</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Remarks)
                                    </td>
                                    @if (item.AssignedReviewer1 == User.Identity.Name || item.AssignedReviewer2 == User.Identity.Name)
                                    {
                                        <td>
                                            <a asp-action="ViewUnitInformationByReviewer" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                                <span class="text">View</span>
                                            </a>
                                            @if (item.IsReviewedByReviewer1 == true && item.IsReviewedByReviewer2 == true)
                                            {
                                                <a asp-action="AssignToApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split">
                                                    <span class="text">Assign To Approver</span>
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-action="AssignToApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                                    <span class="text">Assign To Approver</span>
                                                </a>
                                            }
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a asp-action="ViewUnitInformationByReviewer" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                                <span class="text">View</span>
                                            </a>
                                            <a asp-action="AssignToApprover" asp-route-id="@item.Id" class="btn btn-primary btn-icon-split disabled">
                                                <span class="text">Assign To Approver</span>
                                            </a>
                                        </td>
                                    }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
